{
  "$schema": "../frontend/node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "make build",
    "beforeDevCommand": "make dev",
    "devPath": "http://localhost:3000",
    "distDir": "../frontend/dist"
  },
  "package": {
    "productName": "random_visualizer",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "pattern": {
      "use": "isolation",
      "options": {
        "dir": "../security"
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "randvis.g-bw.de",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Visual Random",
        "width": 800
      }
    ]
  }
}